                  <label for="answer_access_off">{{ text_yes }}</label>
                      <input id="answer_access_on" class="hide-radio radio-on" type="radio" name="extended_reviews_settings[answer_access]" value="1" {{ extended_reviews['answer_access'] is not empty and extended_reviews['answer_access'] ? 'checked' : '' }}>
                      <label for="answer_access_on">{{ text_no }}<span class="onoffswitch-inner"></span><span class="onoffswitch-switch"></span></label>
                </div>
