        <div class="tab-pane" id="media-settings">
          <div class="form-group">
            <label class="col-sm-6 control-label" for="input-container">{{ text_add_photo }}</label>
            <div class="col-sm-6">
              <div class="radio-group-lite">
                <input id="photo_status_off" class="hide-radio radio-off" type="radio" name="extended_reviews_settings[photo_status]" value="0" {{ extended_reviews['photo_status'] is not empty and extended_reviews['photo_status'] ? '' : 'checked' }}>
