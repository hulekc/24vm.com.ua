{{ header ~ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button id="save-settings" type="submit" form="extended_reviews_settings" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
      {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  {% elseif (success) %}
    <div class="alert alert-success"><i class="fa fa-check"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  {% endif %}

{% if (extended_reviews['key'] is defined and extended_reviews['key'] is not empty and license) %}
    <div class="panel panel-default">
      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="extended_reviews_settings" class="form-horizontal">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#main-settings" data-toggle="tab" aria-expanded="false">{{ text_main_settings }}</a></li>
            <li class=""><a href="#media-settings" data-toggle="tab" aria-expanded="true">{{ text_media_settings }}</a></li>
            <li class=""><a href="#carousel-settings" data-toggle="tab" aria-expanded="true">{{ text_owl_settings }}</a></li>
            <li class=""><a href="#reward-settings" data-toggle="tab" aria-expanded="true">{{ rewards_title }}</a></li>
            <li class=""><a href="#api-settings" data-toggle="tab" aria-expanded="true">{{ text_api }}</a></li>
            <li class=""><a href="#tab-support" data-toggle="tab" aria-expanded="true">{{ text_support }}</a></li>
          </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="main-settings">
            <div class="form-group">
              <label class="col-sm-6 control-label" for="input-container">{{ entry_status }}</label>
              <div class="col-sm-6">
                <div class="radio-group-lite">
                  <input id="status_off" class="hide-radio radio-off" type="radio" name="extended_reviews_settings[status]" value="0" {{ extended_reviews['status'] is not empty and extended_reviews['status'] ? '' : 'checked' }}>
                  <label for="status_off">{{ text_on }}</label>
                      <input id="status_on" class="hide-radio radio-on" type="radio" name="extended_reviews_settings[status]" value="1" {{ extended_reviews['status'] is not empty and extended_reviews['status'] ? 'checked' : '' }}>
                      <label for="status_on">{{ text_off }}<span class="onoffswitch-inner"></span><span class="onoffswitch-switch"></span></label>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-6 control-label">{{ text_link_allreviews }}</label>
              <div class="col-sm-6">
                  <div class="row" style="padding: 10px">
                      <a href = "{{ reviews_link }}" target="_blank">{{ reviews_link }}</a>
                  </div>
                </div>
            </div>


            <div class="form-group">
              <label class="col-sm-6 control-label" for="input-header">{{ entry_title }}</label>
              <div class="col-sm-3">
                {% for language in languages %}
                  <div class="input-group"><span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /></span>
                    <input type="text" name="extended_reviews_settings[module_header][{{ language['language_id'] }}]" value="{{ extended_reviews['module_header'][language['language_id']] is defined ? extended_reviews['module_header'][language['language_id']] : '' }}" placeholder="{{ entry_title }}" id="input-header" class="form-control" />
                  </div>
                  {% if (error_header[language['language_id']] is defined and error_header[language['language_id']]) %}
                    <div class="text-danger">{{ error_header[language['language_id']] }}</div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-6 control-label" for="input-container">{{ entry_automoderate }}</label>
              <div class="col-sm-6">
                <div class="radio-group-lite">
                  <input id="automoderate_off" class="hide-radio radio-off" type="radio" name="extended_reviews_settings[automoderate]" value="0" {{ extended_reviews['automoderate'] is not empty and extended_reviews['automoderate'] ? '' : 'checked' }}>
                  <label for="automoderate_off">{{ text_yes }}</label>
                      <input id="automoderate_on" class="hide-radio radio-on" type="radio" name="extended_reviews_settings[automoderate]" value="1" {{ extended_reviews['automoderate'] is not empty and extended_reviews['automoderate'] ? 'checked' : '' }}>
                      <label for="automoderate_on">{{ text_no }}<span class="onoffswitch-inner"></span><span class="onoffswitch-switch"></span></label>
