                      <input id="likes_access_on" class="hide-radio radio-on" type="radio" name="extended_reviews_settings[likes_access]" value="1" {{ extended_reviews['likes_access'] is not empty and extended_reviews['likes_access'] ? 'checked' : '' }}>
                      <label for="likes_access_on">{{ text_no }}<span class="onoffswitch-inner"></span><span class="onoffswitch-switch"></span></label>
