                    {% for key,value in sorts %}
                    {% if (value == (extended_reviews['sort_order'] is not empty? extended_reviews['sort_order']:'date_added')) %}
                    <option value="{{ value }}" selected="selected">{{ key }}</option>
                    {% else %}
                    <option value="{{ value }}">{{ key }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
            </div>

