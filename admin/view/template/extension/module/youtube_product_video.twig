{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
                  <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-apc" class="form-horizontal">
          <div class="row">
            <div class="col-sm-3">
              <ul id="method-list" class="nav nav-pills nav-stacked">
                <li class="active"><a href="#tab-general" data-toggle="tab"> {{ text_output_type }}</a></li>
				<li><a href="#tab-button" data-toggle="tab"> {{ text_button_title }}</a></li>
				<li><a href="#tab-tab" data-toggle="tab"> {{ text_tab_title  }}</a></li>
              </ul>
            </div>
            <div class="col-sm-9">
              <div class="tab-content">
                <div class="tab-pane active" id="tab-general">
              <fieldset>
           <legend class="md-legend">{{ text_output_type }}</legend>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-position">{{ entry_output_type }}</label>
                        <div class="col-sm-10">
                            <select name="youtube_product_video[youtube_product_video_output_type]" id="input-position" class="form-control">
                                {% if youtube_product_video.youtube_product_video_output_type == 'tab' %}
                                    <option value="button">{{ text_output_type_button }}</option>
                                    <option value="tab" selected="selected">{{ text_output_type_tab }}</option>
                                {% else %}
                                    <option value="button" selected="selected">{{ text_output_type_button }}</option>
                                    <option value="tab">{{ text_output_type_tab }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
				 </fieldset>
                </div>
                <div class="tab-pane" id="tab-button">
                  <fieldset>
               <legend class="md-legend">{{ text_button_title }}</legend>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-selector">{{ entry_selector }}</label>
                        <div class="col-sm-10">
                            <input name="youtube_product_video[youtube_product_video_selector]" value="{{ youtube_product_video.youtube_product_video_selector }}" id="input-selector" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-position">{{ entry_position }}</label>
                        <div class="col-sm-10">
                            <select name="youtube_product_video[youtube_product_video_position]" id="input-position" class="form-control">
                                {% if youtube_product_video.youtube_product_video_position == 'after' %}
                                    <option value="before">{{ text_position_before }}</option>
                                    <option value="after" selected="selected">{{ text_position_after }}</option>
                                {% else %}
                                    <option value="before" selected="selected">{{ text_position_before }}</option>
                                    <option value="after">{{ text_position_after }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-align">{{ entry_align }}</label>
                        <div class="col-sm-10">
                            <select name="youtube_product_video[youtube_product_video_align]" id="input-align" class="form-control">
                                <option value="left" {% if youtube_product_video.youtube_product_video_align == 'left' %}selected="selected"{% endif %}>{{ text_align_left }}</option>
                                <option value="right" {% if youtube_product_video.youtube_product_video_align == 'right' %}selected="selected"{% endif %}>{{ text_align_right }}</option>
                                <option value="center" {% if youtube_product_video.youtube_product_video_align == 'center' %}selected="selected"{% endif %}>{{ text_align_center }}</option>
                            </select>
                        </div>
                    </div>
			   </fieldset>
                </div>
                <div class="tab-pane" id="tab-tab">
                  <fieldset>
              <legend class="md-legend">{{ text_tab_title }}</legend>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-tab_selector">{{ entry_tab_selector }}</label>
                        <div class="col-sm-10">
                            <input name="youtube_product_video[youtube_product_video_tab_selector]" value="{{ youtube_product_video.youtube_product_video_tab_selector }}" id="input-tab_selector" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-position">{{ entry_tab_position }}</label>
                        <div class="col-sm-10">
                            <select name="youtube_product_video[youtube_product_video_tab_position]" id="input-position" class="form-control">
                                {% if youtube_product_video.youtube_product_video_tab_position == 'after' %}
                                    <option value="before">{{ text_position_before }}</option>
                                    <option value="after" selected="selected">{{ text_position_after }}</option>
                                {% else %}
                                    <option value="before" selected="selected">{{ text_position_before }}</option>
                                    <option value="after">{{ text_position_after }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-tab_content_selector">{{ entry_tab_content_selector }}</label>
                        <div class="col-sm-10">
                            <input name="youtube_product_video[youtube_product_video_tab_content_selector]" value="{{ youtube_product_video.youtube_product_video_tab_content_selector }}" id="input-tab_content_selector" class="form-control">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}