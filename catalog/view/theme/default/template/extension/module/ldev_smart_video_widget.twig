<div
        data-module-id="{{ module }}"
        data-btn-close-action = "{{ btn_close_action }}"
        data-delay = "{{ delay }}"
        data-on-exiting = "{{ on_exiting }}"
     class="ldev-smart-video-widget widget-{{ module }} ldev-smart-video-widget-{{ widget_position }} {% if not show_mobile %} widget-hide-mobile  {% endif %}">
    <div class="widget-caption">
        {% if video %}
            <img width="42" height="42" src="/catalog/view/javascript/ldev_smart_video_widget/loader.gif" class="widget-loader">
            <video playsinline controlslist="nodownload" muted
                    {% if autostart %} data-autoplay {% endif %}

                    {% if video_controls %} controls {% endif %}
                {%  if loop %} loop {% endif %}
                width = "{{ video_small_width }}"
                height = "{{ video_small_height }}"
               data-video-small-width = "{{ video_small_width }}"
               data-video-small-height = "{{ video_small_height }}"
               data-video-big-width = "{{ video_big_width }}"
               data-video-big-height = "{{ video_big_height }}"
               data-restart-on-expanse = "{{ restart_on_expanse }}"
        >
            <source data-src="{{ video }}"
                    type="video/mp4">
            Sorry, your browser doesn't support embedded videos.
        </video>
        {% elseif image %}

            <div
                    class="ldev-smart-video-widget-image">
                <img
                        src="{{ image }}"
                        data-src-small = "{{ image }}"
                        data-src-big = "{{ thumb }}"
                        data-image-click="{{ image_click }}"
                        data-image-link = "{{ image_link }}"
                        alt="" title="">
            </div>
        {% endif %}

        {% if description %}
            <div class="ldev-smart-video-widget-description">
                {{ description }}
            </div>
        {% endif %}

        {% if btn_1_text  or btn_2_text  %}
            <div class="ldev-smart-video-widget-buttons {% if btn_over %} widget-buttons-over  {% endif %}">
            {% if  btn_1_text %}
            <a href="{{ btn_1_href }}" class="btn btn-{{ btn_size }} btn-{{ btn_style }}">{{ btn_1_text }}</a>
            {% endif %}
            {% if  btn_2_text %}
                <a href="{{ btn_2_href }}" class="btn btn-{{ btn_size }} btn-{{ btn_style }}">{{ btn_2_text }}</a>
            {% endif %}
            </div>

        {% endif %}
        <span class="btn-close-widget"
              data-module-id="{{ module }}"
              data-btn-close="{{ btn_close }}"
              data-btn-close-action = "{{ btn_close_action }}">Ã—</span>
    </div>
</div>

{% if custom_css %}
<style>
    {{ custom_css }}
</style>
{% endif %}

{% if custom_js %}
    <script>
        {{ custom_js }}
    </script>
{% endif %}

